@page "/pokemon/{speciesId:int}"

@inject NavigationManager NavigationManager
@inject HttpClient Http

<h1>Pokémon Details</h1>

@if (pokemonDetails == null)
{
    <p>Loading Pokémon details...</p>
}
else
{
    <div>
        <h2>@pokemonDetails.Name</h2>
        <p><strong>Type:</strong> @string.Join(", ", pokemonDetails.Types)</p>
        <p><strong>Description:</strong> @pokemonDetails.Description</p>
        <img src="@pokemonDetails.ImageUrl" alt="@pokemonDetails.Name" style="width: 200px;" />
    </div>
}

